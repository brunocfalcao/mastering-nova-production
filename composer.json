{
    "name": "brunocfalcao/mastering-nova-production",
    "type": "project",
    "description": "Mastering Nova website",
    "keywords": [
        "framework",
        "laravel",
        "nova",
        "php"
    ],
    "homepage": "https://github.com/brunocfalcao/helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Falcao",
            "email": "bruno.c.falcao@brunofalcao.me",
            "homepage": "https://www.brunofalcao.me",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "packages/laravel/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^7.2.5||^8.0",
        "blade-ui-kit/blade-heroicons": "^1.4",
        "blade-ui-kit/blade-icons": "^1.5",
        "brunocfalcao/blade-feather-icons": "^3.0",
        "brunocfalcao/flame": "dev-master",
        "brunocfalcao/helpers": "dev-master",
        "doctrine/dbal": "^2.10",
        "geoip2/geoip2": "~2.0",
        "guzzlehttp/guzzle": "^7.0",
        "intervention/image": "^2.5",
        "laravel/framework": "^10.0",
        "laravel/nova": "^4.0",
        "predis/predis": "^1.1",
        "protonemedia/laravel-paddle": "^2.6",
        "spatie/laravel-activitylog": "^4.7",
        "spatie/laravel-honeypot": "^4.3",
        "spatie/laravel-medialibrary": "^10.7"
    },
    "require-dev": {
        "filp/whoops": "^2.7",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^7.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "helpers.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [],
            "aliases": {
                "WebsiteCheckout": "App\\Facades\\WebsiteCheckout"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "check-style": "php-cs-fixer fix --dry-run --diff",
        "fix-style": "php-cs-fixer fix",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
